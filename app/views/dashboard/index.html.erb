<!-- Main Content Area -->
<div class="content-area" data-controller="dashboard">
  <!-- Weather Section -->
  <div class="weather-section">
    <h2 class="section-title">5-Day Weather Forecast</h2>
    <div class="weather-cards" id="weather-forecast" data-dashboard-target="weatherForecast">
      <!-- Weather cards will be inserted here by JavaScript -->
    </div>
  </div>

  <!-- Garden Overview -->
  <div class="garden-overview">
    <h2 class="section-title">Garden Overview</h2>

    <div class="overview-grid">
      <div class="overview-card tasks-card">
        <h3 class="card-title">Upcoming Tasks</h3>
        <ul class="task-list">
          <li class="task-item">
            <span class="task-marker urgent"></span>
            Water tomatoes (Today)
          </li>
          <li class="task-item">
            <span class="task-marker medium"></span>
            Harvest lettuce (Tomorrow)
          </li>
          <li class="task-item">
            <span class="task-marker low"></span>
            Plant new herbs (Wednesday)
          </li>
        </ul>
      </div>

      <div class="overview-card water-card">
        <h3 class="card-title">Water Management</h3>
        <div class="moisture-bar">
          <span class="moisture-label">Soil Moisture:</span>
          <div class="moisture-progress">
            <div class="moisture-value" style="width: 65%"></div>
          </div>
        </div>
        <div class="rain-forecast">
          <span class="rain-label">Rain Forecast:</span>
          <span class="rain-value">0.5" on Wednesday</span>
        </div>
      </div>
    </div>
  </div>
